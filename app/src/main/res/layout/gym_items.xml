<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15pt"
        >

        <ImageView
            android:id="@+id/exercise_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_background"
            android:clipToOutline="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/exercise_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="exercise's name"
            android:textColor="@color/white"
            android:layout_alignLeft="@+id/exercise_image"
            android:layout_alignRight="@+id/exercise_image"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/body_part_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Body part"
            android:layout_alignLeft="@+id/exercise_image"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/exercise_name_view"
            android:layout_alignBottom="@+id/exercise_image"
            android:gravity="center_vertical"
            android:textStyle="bold"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="24sp"
            android:id="@+id/more_info_button"
            android:layout_alignRight="@+id/exercise_image"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/custom_primary"
            android:layout_alignBottom="@+id/exercise_image"
            android:layout_marginBottom="12pt"
            />


    </RelativeLayout>
</FrameLayout>