<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6pt"
        android:text="@string/hello_home_fragment" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_text"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/image_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular exercises"
                android:layout_marginLeft="13.5pt"
                android:textSize="12pt" />
            />

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider_view"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginBottom="12pt"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view_exercise_content"
                >

                <ImageView
                    android:id="@+id/image_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="15.5pt"
                    android:layout_marginRight="15.5pt"
                    android:background="@drawable/ic_background"
                    android:clipToOutline="true"
                    android:src="@drawable/ic_exercise"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="View exercises"
                    android:textSize="10pt"/>

                <ImageButton
                    android:id="@+id/view_exercises_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icons8_fl_che_50"
                    android:layout_alignEnd="@+id/image_exercise"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_exercise_content"
                android:layout_marginTop="12pt"
                >

                <ImageView
                    android:id="@+id/image_workout_plan"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="15.5pt"
                    android:layout_marginRight="15.5pt"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_background"
                    android:clipToOutline="true"
                    android:src="@drawable/full_body_routine_660x330"
                    android:scaleType="fitXY"
                    />

                <ImageButton
                    android:id="@+id/view_workout_plan_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icons8_fl_che_50"
                    android:layout_alignEnd="@+id/image_workout_plan"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="View workout plans"
                    android:layout_marginRight="12pt"
                    android:textSize="10pt"/>

            </RelativeLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- TODO: Update blank fragment layout -->


</RelativeLayout>